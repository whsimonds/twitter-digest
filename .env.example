# Twitter Digest Configuration
# Copy this file to .env and fill in your values

# ═══════════════════════════════════════════
# REQUIRED
# ═══════════════════════════════════════════

# Your xAPIs.dev API key
# Get one at: https://xapis.dev
XAPIS_KEY=your_xapis_key_here

# Your Twitter username (without @)
# Not needed in test mode
TWITTER_USERNAME=your_username

# ═══════════════════════════════════════════
# TEST MODE (use this first!)
# ═══════════════════════════════════════════

# Enable test mode to limit API credits used
TEST_MODE=true

# Maximum credits to use (default: 3)
TEST_MAX_CREDITS=3

# Accounts to fetch in test mode (comma-separated, no @)
# Each account = 1 credit
TEST_ACCOUNTS=elonmusk,sama,paulg

# ═══════════════════════════════════════════
# EMAIL NOTIFICATIONS (optional)
# ═══════════════════════════════════════════

# Resend API key for email notifications
# Get one at: https://resend.com
RESEND_KEY=re_your_resend_key

# Email recipient
EMAIL_TO=you@example.com

# Sender email (must be from a verified Resend domain)
# Use "onboarding@resend.dev" for testing, or your own domain
EMAIL_FROM=digest@yourdomain.com

# URL where your digest will be hosted
# This is included in the notification email
DIGEST_URL=https://yourusername.github.io/twitter-digest/

# ═══════════════════════════════════════════
# OPTIONAL SETTINGS
# ═══════════════════════════════════════════

# Include retweets in digest (default: true)
INCLUDE_RETWEETS=true

# Include replies to others (default: false)
INCLUDE_REPLIES=false

# How many hours back to fetch (default: 24)
HOURS_BACK=24

# Max tweets per user to check (default: 50)
MAX_TWEETS_PER_USER=50

# Rate limit delay in ms (default: 500)
RATE_LIMIT_MS=500

# Output directory (default: ./docs)
OUTPUT_DIR=./docs

# Default view mode: 'time' | 'author' | 'threads'
DEFAULT_VIEW=time

# Theme: 'dark' | 'light'
THEME=dark

# Show engagement metrics (default: false)
SHOW_METRICS=false

# Enable debug output
DEBUG=false
